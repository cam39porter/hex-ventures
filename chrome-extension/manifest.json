{
  "name": "Tangle",
  "version": "0.1.0",
  "description": "Tangle sharing extension",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Tangle"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs", "activeTab", "http://*/*", "https://*/*"],
  "content_security_policy":
    "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
